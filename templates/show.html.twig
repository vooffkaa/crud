{% extends 'layout.html.twig' %}
{% block content %}

   <div class="table-responsive">
        <table class="table">
            <tr>
                <th>First name</th>
                <th>Last Name</th>
                <th>E-mail</th>
                <th>Company Name</th>
                <th>Position</th>
                <th>Phone 1</th>
                <th>Phone 2</th>
                <th>Phone 3</th>
                <th>Action</th>
            </tr>
        {% for user in users %}
            <tr>
                <td> {{ user.firstname }} </td> <td> {{ user.lastname }} </td> <td> {{ user.email }} </td>
                <td>{{ user.companyname }}</td> <td>{{ user.position }}</td> <td>{{ user.phone1 }}</td>
                <td>{{ user.phone2 }}</td> <td>{{ user.phone3 }}</td>
                <td>
                    <a href="{{ path('delete_user', {'id': user.id}) }}"><i class="fas fa-user-minus"></i></a>
                    <a href="{{ path('update_user', {'id': user.id}) }}"><i class="fas fa-user-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            {{ knp_pagination_render(users, null, {}, {'position': 'centered', 'size': 'large'}) }}
        </div>
        <div class="col-sm-4"></div>
    </div>
{% endblock %}